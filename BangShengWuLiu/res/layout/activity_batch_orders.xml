<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<include layout="@layout/common_topbar"/>
	
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <Button 
	        style="@style/button1"
	        android:id="@+id/btn_batch_sign"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/button_margin_left"
	        android:layout_marginRight="@dimen/button_margin_right"
	        android:layout_marginTop="@dimen/dimen_normal"
	        android:layout_marginBottom="@dimen/dimen_normal"
	        android:layout_alignParentBottom="true"
	        android:text="批量反馈"/>
	    
	    <com.devin.framework.view.PullListView 
		    style="@style/listView"
		    android:id="@+id/plv_orders"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_above="@id/btn_batch_sign"
		    android:divider="@null"
		    android:dividerHeight="@dimen/dimen_normal"/>
	</RelativeLayout>
	
</LinearLayout>
