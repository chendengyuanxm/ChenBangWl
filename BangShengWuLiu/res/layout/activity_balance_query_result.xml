<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<include layout="@layout/common_topbar"/>
	
	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/page_margin_top"
	    android:paddingTop="15dip"
	    android:paddingBottom="15dip"
	    android:background="@color/white"
	    android:orientation="vertical">
		<TableRow 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="20dip"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="30dip"
		        android:text="银行卡号"
		        android:textSize="@dimen/text_label"
		        android:textColor="@color/text_label_grayer"/>
		    <TextView 
		        android:id="@+id/tv_cardNo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="平安银行   尾号1022"
		        android:textSize="@dimen/text_label"
		        android:textColor="@color/text_label_grayer"/>
		</TableRow> 
		
		<View android:layout_width="match_parent"
		    android:layout_height="0.8dip"
		    android:layout_marginTop="10dip"
		    android:layout_marginBottom="10dip"
		    android:background="@color/line_gray"/>
		
		<TableRow 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="20dip"
		    android:orientation="horizontal">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="余额"
		        android:textSize="@dimen/text_label"
		        android:textColor="@color/text_label_grayer"/>
		    <TextView 
		        android:id="@+id/tv_balance"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="0.00"
		        android:textSize="@dimen/text_label"
		        android:textColor="@color/text_label_red"/>
		</TableRow> 
	</TableLayout>
	
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:visibility="invisible"/>
	
	<Button 
	    style="@style/button1"
	    android:id="@+id/btn_confirm"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/button_margin_left"
	    android:layout_marginRight="@dimen/button_margin_right"
	    android:layout_marginTop="@dimen/button_margin_top"
	    android:layout_marginBottom="@dimen/page_margin_bottom"
	    android:text="返回主菜单"/>
</LinearLayout>
