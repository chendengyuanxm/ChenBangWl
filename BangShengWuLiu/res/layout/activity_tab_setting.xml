<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/common_topbar"/>

    <RelativeLayout
        android:id="@+id/rl_personal_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_normal"
        android:paddingBottom="@dimen/dimen_small"
        android:paddingTop="@dimen/dimen_small"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_big"
            android:src="@drawable/icon_setting_userinfo" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_big"
            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/label"
            style="@style/text_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_normal"
            android:layout_toRightOf="@id/icon"
            android:text="个人中心" />

    </RelativeLayout>

    <ListView
        style="@style/listView"
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_normal"
        android:background="@color/white"
        android:divider="@null" >
    </ListView>

</LinearLayout>